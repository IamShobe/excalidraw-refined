{
  "plugins": {
    "@release-it/bumper": {
      "out": ["frontend/package.json"]
    },
    "@j-ulrich/release-it-regex-bumper": {
      "out": [
        {
          "file":  "backend/pyproject.toml",
          "search": {
            "pattern": "(?<=^version = \").*(?=\")",
            "flags": "mg"
          },
          "replace": "{{version}}"
        }
      ]
    }
  },
  "npm": false,
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  }
}
